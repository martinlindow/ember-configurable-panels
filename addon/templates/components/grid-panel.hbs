<div class="panel panel-primary">
  <div class="panel-heading clearfix">
    <h4 class="panel-title pull-left">{{title}}</h4>
    <div class="btn-group pull-right">
      {{#if showPanelSettings}}
        <button class="btn btn-default btn-xs btn-primary-outline">
          {{fa-icon "wrench"}}
          <BsPopover @title="Settings" @placement="bottom">
            <div class="form-group">
              <b for="title">Title</b>
              {{input type="text" class="form-control" id="title" aria-describedby="titleHelp" placeholder="Enter title..." value=title}}
              <small id="titleHelp" class="form-text text-muted">Enter a title for the panel</small>
            </div>
            <div class="form-group">
              <b for="columns">Columns</b>
              {{input type="number" class="form-control" id="columns" aria-describedby="columnsHelp" placeholder="Enter columns..." value=columns}}
              <small id="columnsHelp" class="form-text text-muted">Enter the amount of items that should be displayed in each column</small>
            </div>
          </BsPopover>
          <BsTooltip @title="Settings" />
        </button>
      {{/if}}
      {{#if refreshAction}}
        <button class="btn btn-default btn-xs" {{action "refresh"}}>
          {{fa-icon "refresh"}}
          <BsTooltip @title="Refresh" />
        </button>
      {{/if}}
      {{#if addItemAction}}
        <button class="btn btn-default btn-xs" {{action addItemAction}}>
          {{fa-icon "plus"}}
          <BsTooltip @title="Add" />
        </button>
      {{/if}}
    </div>
  </div>
  <div class="panel-body">
    {{#each rows as |row|}}
      <div class="row">
        {{#each row as |item|}}
          <div class={{concat "col-md-" column_class}}>
            {{component item_component item=item}}
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>